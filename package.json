{
    "name": "@adguard/aglint",
    "version": "4.0.0-alpha.0",
    "description": "Linter for adblock filter lists.",
    "keywords": [
        "adblock",
        "adguard",
        "filter",
        "linter",
        "list",
        "ublock"
    ],
    "author": "AdGuard Software Ltd.",
    "license": "MIT",
    "type": "module",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/AdguardTeam/AGLint.git"
    },
    "bugs": {
        "url": "https://github.com/AdguardTeam/AGLint/issues"
    },
    "homepage": "https://github.com/AdguardTeam/AGLint#readme",
    "bin": "dist/cli/cli.js",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/types/index.d.ts",
            "import": "./dist/index.js"
        },
        "./config-presets/all": "./config-presets/all.json",
        "./config-presets/recommended": "./config-presets/recommended.json"
    },
    "files": [
        "dist/**",
        "!dist/build.txt"
    ],
    "engines": {
        "node": ">=20"
    },
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "rollup --config rollup.config.ts --configPlugin typescript",
        "check-types": "tsc",
        "clean": "rimraf dist",
        "coverage": "vitest --coverage",
        "lint": "pnpm check-types && pnpm lint:ts && pnpm lint:md",
        "lint:md": "markdownlint .",
        "lint:ts": "eslint . --cache --ext .ts",
        "prepare": "node .husky/install.js",
        "increment": "pnpm version patch --no-git-tag-version",
        "test": "vitest"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.2",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-typescript": "^12.1.2",
        "@types/clone-deep": "^4.0.1",
        "@types/esquery": "^1.5.4",
        "@types/glob-parent": "^5.1.3",
        "@types/is-glob": "^4.0.4",
        "@types/node": "^18.11.7",
        "@types/text-table": "^0.2.2",
        "@typescript-eslint/eslint-plugin": "^5.60.1",
        "@typescript-eslint/parser": "^5.60.1",
        "@vitest/coverage-v8": "3.1.3",
        "ci-info": "^4.0.0",
        "eslint": "^8.57.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "eslint-plugin-boundaries": "^5.0.1",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-import-newlines": "^1.3.1",
        "eslint-plugin-jsdoc": "^46.3.0",
        "eslint-plugin-n": "^17.23.1",
        "husky": "^9.0.7",
        "jsdoc": "^4.0.2",
        "lint-staged": "^16.2.0",
        "markdownlint": "^0.30.0",
        "markdownlint-cli": "^0.35.0",
        "rimraf": "^5.0.1",
        "rollup": "^4.41.0",
        "rollup-plugin-node-externals": "^6.1.1",
        "tsc-files": "^1.1.4",
        "tsx": "^4.7.0",
        "typescript": "^5.8.3",
        "vitest": "^3.1.3"
    },
    "dependencies": {
        "@adguard/agtree": "^3.2.4",
        "@adguard/ecss-tree": "^2.0.0",
        "@inquirer/checkbox": "^4.3.0",
        "@inquirer/select": "^4.4.0",
        "chalk": "5.6.2",
        "clone-deep": "^4.0.1",
        "commander": "^14.0.1",
        "deepmerge": "^4.3.1",
        "esquery": "^1.6.0",
        "fast-deep-equal": "^3.1.3",
        "fast-fuzzy": "^1.12.0",
        "fast-glob": "^3.3.3",
        "glob-parent": "^6.0.2",
        "ignore": "^5.2.4",
        "inflection": "^2.0.1",
        "is-glob": "^4.0.3",
        "micromustache": "^8.0.3",
        "ohash": "^2.0.11",
        "p-limit": "^7.2.0",
        "piscina": "^5.1.3",
        "strip-ansi": "6.0.1",
        "terminal-link": "2.1.1",
        "text-table": "^0.2.0",
        "valibot": "^1.1.0",
        "yaml": "^2.8.1"
    }
}
