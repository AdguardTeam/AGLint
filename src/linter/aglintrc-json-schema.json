{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "severity": {
      "oneOf": [
        {
          "type": "string",
          "enum": ["off", "warn", "error", "fatal"]
        },
        {
          "type": "number",
          "enum": [0, 1, 2, 3]
        }
      ]
    }
  },
  "properties": {
    "root": {
      "type": "boolean"
    },
    "extends": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "allowInlineConfig": {
      "type": "boolean"
    },
    "syntax": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["Common", "AdblockPlus", "UblockOrigin", "AdGuard"]
      }
    },
    "rules": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "oneOf": [
            {
              "$ref": "#/definitions/severity"
            },
            {
              "type": "array",
              "minItems": 1,
              "items": [
                {
                  "$ref": "#/definitions/severity"
                },
                {}
              ]
            }
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
